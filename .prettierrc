{
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "printWidth": 100,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.dart",
      "options": {
        "tabWidth": 2,
        "printWidth": 100
      }
    },
    {
      "files": ["*.yaml", "*.yml", "*.json", "*.md"],
      "options": {
        "tabWidth": 2,
        "printWidth": 100
      }
    }
  ]
}
